
<%= form_for([current_user, @newproject]) do |f| %>

 <div class="form-group">
 	<p>
    <div class="col-md-4 col-md-offset-4" align="center"><%= f.text_field :creator, placeholder: "Creator", class: "form-control" %></div>
    <br>
    </p>

	<p>
    <div class="col-md-4 col-md-offset-4" align="center"><%= f.text_field :email, placeholder: "Creator's Email", class: "form-control" %></div>
    <br>
    </p>

    <p>
    <div class="col-md-4 col-md-offset-4 col-md-offset-4" align="center"><%= f.text_field :title, placeholder: "Title of the Project", class: "form-control" %></div>
    </p><br>

	<p> 
	<div class="col-md-4 col-md-offset-4 col-md-offset-4" align="center">
    	<div class=categorytitle><strong>Category: </strong> Please select the relevant categories</div>
	</div>
	
		<div class="col-md-8 col-md-offset-2 col-md-offset-2" align="center">
			<label class="checkbox-inline">
				<%=f.check_box :education%>
				<%= f.label "Education" %> 
			</label>

			<label class="checkbox-inline">
				<%= f.check_box :health%>
				<%= f.label "Health" %> 
			</label>

			<label class="checkbox-inline">
				<%= f.check_box :poverty%>
				<%= f.label "Poverty" %> 
			</label>

			<label class="checkbox-inline">
				<%= f.check_box :artsandculture%>
				<%= f.label "Arts & Culture" %> 
			</label>

			<label class="checkbox-inline">
				<%= f.check_box :business%>
				<%= f.label "Business" %> 
			</label>

			<label class="checkbox-inline">
				<%= f.check_box :foodsecurity %>
				<%= f.label "Food Security" %> 
			</label>
		</div>
	</p>


    <div class="col-md-4 col-md-offset-4 col-md-offset-4" align="center"><%= f.text_area :description, placeholder: "Description of your project", class: "form-control" %></div>
    <br>
    </p>



     <p>
    	<div class="col-md-4 col-md-offset-4 col-md-offset-4" align="center">
    	<div class=categorytitle><strong>Make the project PUBLIC?</strong></div>
    	<label class="radio-inline">
  			<%= f.check_box :public %>
			<%= f.label "Public" %> 
		</label>
	</div>

	</div>



    <p>
    	<div class="col-md-6 col-md-offset-3 col-md-offset-3" align="center">
    	<div class=categorytitle><strong>Work on the project as team or individual?</strong> Please select one</div>
    	  <div class="col-md-6 col-md-offset-3 col-md-offset-3" align="center">
		<label class="radio-inline">
  			<%= f.check_box :team %>
			<%= f.label "Team" %> 
			<%= f.check_box :individual %>
			<%= f.label "Individual" %> 
		</label>
		<br>

	</div>
	</div>


	<div class="col-md-8 col-md-offset-2 col-md-offset-2" align="center">
		If you work on the project as team, please indicate how many team members you are working with.
		<div class="col-md-4 col-md-offset-4 col-md-offset-4" align="center">
		<select class="form-control"  align="center">
  			<option>1</option>
  			<option>2</option>
  			<option>3</option>
  			<option>4</option>
  			<option>5</option>
		</select>
		</div>
	</div>

 <div class="col-md-6 col-md-offset-3 col-md-offset-3" align="center">
<button class="btn btn-success" type="submit">SUBMIT</button>


</div>

 

 </div>

<% end %>

