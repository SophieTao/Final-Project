
<%= form_for([current_user, @newproject]) do |f| %>

	<p>
	<%= f.label :creator %> <br>
	<%= f.text_area :creator%> 
	</p>

	<p>
	<%= f.label :title %> <br>
	<%= f.text_area :title %> 
	</p>

	<p>
	<%= f.label :category %> <br>
	<%= f.text_area :category%> 
	</p>

	<p>
	<%= f.label :description %> <br>
	<%= f.text_area :description %> 
	</p>

	<p>
	<%= f.label :email %> <br>
	<%= f.text_area :email %> 
	</p>

	<p>
	<br><%= f.label "Public"%> </br>
	<%=f.check_box :public, {:checked=>true}%>
	</p>

	<p>
	<br><%= f.label "Individual"%> </br>
	<%=f.check_box :individual, {:checked=>true}%>
	</p>

	<p>
	<%= f.submit %>
	</p>

<% end %>

