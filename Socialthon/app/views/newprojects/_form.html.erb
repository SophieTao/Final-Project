
<%= form_for([current_user, @newproject]) do |f| %>

	<p>
	<%= f.label "Creator of the Project" %> <br>
	<%= f.text_area :creator%> 
	</p>

	<p>
	<%= f.label :title %> <br>
	<%= f.text_area :title %> 
	</p>
  
	<p>
	Category<br>
	<p>Please select the relevant categories </p>

	<%= f.label "Education" %> 
	<%=f.check_box :education%>

	<%= f.label "Health" %> 
	<%= f.check_box :health%>

	<%= f.label "Poverty" %> 
	<%= f.check_box :poverty%>

	<%= f.label "Arts & Culture" %> 
	<%= f.check_box :artsandculture%>

	<%= f.label "Business" %> 
	<%= f.check_box :business%>

	<%= f.label "Food Security" %> 
	<%= f.check_box :foodsecurity %>
	<br>
	</p>


	<p>
	<%= f.label :description %> <br>
	<%= f.text_area :description %> 
	</p>

	<p>
	<%= f.label :email %> <br>
	<%= f.text_area :email %> 
	</p>

	<p>
	<br><%= f.label "Do you want to make your project public?"%> </br>
	<%=f.check_box :public%>
	</p>

	

	<p>
	<br><%= f.label "Do you want to work the project individually or as a group?"%> </br>
	<%= f.label "Individual" %> 
	<%= f.check_box :individual%><br>

	<%= f.label "Team" %> 
	<%= f.check_box :team%><br>
	</p>

	<p>
	<br><%= f.label "If you already have teammates, please write down their names."%> </br>
	Maximum:5 <br>
	<p>
	<%= f.label "Member 1"%> <br>
	<%= f.text_area :member1%> 
	</p>

	<p>
	<%= f.label "Member 2" %> <br>
	<%= f.text_area :member2 %> 
	</p>

	<p>
	<%= f.label "Member 3" %> <br>
	<%= f.text_area :member3%> 
	</p>

	<p>
	<%= f.label "Member 4" %> <br>
	<%= f.text_area :member4%> 
	</p>

	<p>
	<%= f.label "Member 5" %> <br>
	<%= f.text_area :member5%> 
	</p>
	</p>
	<p>
	<%= f.submit %>
	</p>

<% end %>

